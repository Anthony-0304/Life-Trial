<h4>Search by category</h4>

  <%= simple_form_for :search, url: listings_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :category, as: :select, collection: [
    'Actors & Actresses',
    'Musicians',
    'Record Breakers',
    'Royalty',
    'Sports People'
    ],
    prompt: 'Select Category' %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>

<br>
<h3 class="listings-heading">Listings</h3>

<div class="d-flex flex-wrap justify-content-evenly p-2 bd-highlight">
  <% @listings.each do |listing| %>
    <div class="card-design" style="width: 18rem;">
      <%= cl_image_tag listing.photos.first.key, class: "card-design-img-top", height: 150, gravoty: :auto %>
      <div class="card-body-design">
        <p class="card-text-design"><%=listing.title%></p>
        <p class="card-text-design">Â£<%=listing.price %></p>
        <p class="card-text-design"><%= link_to "Trial my life", listing_path(listing), class: "button-design" %></p>
      </div>
    </div>
  <% end %>
</div>
