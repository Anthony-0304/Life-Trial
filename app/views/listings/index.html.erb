<div class="container">
  <h4>Search by keyword</h4>

  <%= form_with url: listings_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search Listings"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <h4>Search by category</h4>

    <%= simple_form_for :search, url: listings_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :category, as: :select, collection: [
      'Actors & Actresses',
      'Musicians',
      'Record Breakers',
      'Royalty',
      'Sports People'
      ],
      prompt: 'Select Category' %>
      <%= f.submit "Search", class: "button-design" %>
    <% end %>

  <br>

  <h3><%= @title %></h3>
  <% if @listings.empty? %>
    <p class="text-start"> There are no results for your search ðŸ’” </p>
  <% end %>

  <%# <div class="d-flex flex-wrap justify-content-evenly p-2 bd-highlight"> %>
  <div class="listings_display">
    <% @listings.each do |listing| %>
      <div class="card-design" style="width: 18rem;">
        <%= link_to listing_path(listing), class: "text-decoration-none" do %>
          <%= cl_image_tag listing.photos.first.key, class: "card-design-img-top", height: 150, gravity: :auto %>
          <div class="card-body-design text-decoration-none">
            <p class="card-text-design"><%=listing.title%></p>
            <p class="card-text-design">Â£<%=listing.price %>0</p>
            <p class="card-text-design"><%= link_to "Find out more", listing_path(listing), class: "button-design" %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <% if @my_listings.present? %>
      <hr>
      <h3>My Listings</h3>
    <% end %>

  <%# <div class="d-flex flex-wrap justify-content-evenly p-2 bd-highlight"> %>

  <div class="listings_display">
    <% @my_listings.each do |listing| %>
      <%= link_to listing_path(listing) do %>
        <div class="card-design" style="width: 18rem;" >
          <%= cl_image_tag listing.photos.first.key, class: "card-img-top", height: 150, gravoty: :auto %>
          <div class="card-body-design">
            <p class="card-text-design"><%= listing.title %></p>
            <p class="card-text-design"><%= link_to "View", listing_path(listing), class: "button-design" %></p>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>
  <% end %>

  <%= link_to listings_path do %>
    <div class="secondary-button">
      <i class="fa-solid fa-backward"></i>
    </div>
  <% end %>
</div>
