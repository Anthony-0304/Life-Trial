<h4>Search by category</h4>

  <%= simple_form_for :search, url: listings_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :category, as: :select, collection: [
    'Actors & Actresses',
    'Musicians',
    'Record Breakers',
    'Royalty',
    'Sports People'
    ],
    prompt: 'Select Category' %>
    <%= f.submit "Search", class: "button-design" %>
  <% end %>

